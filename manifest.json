{
  "manifest_version": 3,
  "name": "Paywayll-Detour",
  "version": "0.8",
  "description": "Adds a button to open the current page in archive.ph",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "host_permissions": [
    "https://www.zeit.de/*",
    "https://www.spiegel.de/*",
    "https://www.welt.de/*",
    "https://www.faz.net/*",
    "https://m.faz.net/*",
    "https://www.bild.de/*",
    "https://m.bild.de/*"
    
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.zeit.de/*",
        "https://www.spiegel.de/*",
        "https://www.welt.de/*",
        "https://www.faz.net/*",
        "https://m.faz.net/*",
        "https://www.bild.de/*",
        "https://m.bild.de/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
